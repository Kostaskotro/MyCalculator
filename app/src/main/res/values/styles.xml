<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CalculatorButtons">
        <item name="android:background">@drawable/round_edges_dark</item>
        <item name="android:textColor">@color/softWhite</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="elevation">10dp</item>

    </style>

    <style name="ResultButton">
        <item name="android:background">@drawable/round_background</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>

    </style>


    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Dark">
        <!-- changes the background of the Toolbar's popup -->
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@color/SoftGrey</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="tabCustomStyle" parent="Widget.Design.TabLayout">
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorHeight">3dp</item>
    </style>

</resources>
