<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="numpad"
            type="com.boubalos.mycalculator.views.bindings.MyNumpad" />
        <import type="com.boubalos.mycalculator.views.bindings.MyNumpad"/>
        <import type="android.view.View"/>

    </data>

    <GridLayout
        android:id="@+id/buttonPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/round_edges"
        android:elevation="10dp"
        android:clipToPadding="false"
        android:columnCount="4"
        android:columnOrderPreserved="true"
        android:padding="5dp"
        android:rowCount="5"
        android:rowOrderPreserved="true">


        <!--Row-1-->
        <TextView
            android:id="@+id/clear_btn"
            style="@style/CalculatorButtons"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:gravity="center"
            android:onClick="@{numpad::ResetClicked}"
            android:padding="5dp"
            android:text="C" />

        <TextView
            android:id="@+id/backspace_btn"
            style="@style/CalculatorButtons"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:gravity="center"
            android:onClick="@{numpad::BackspaceClicked}"
            android:padding="5dp"
            android:text="b" />

        <TextView
            android:id="@+id/point_btn"
            style="@style/CalculatorButtons"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:gravity="center"
            android:onClick="@{numpad::PointClicked}"
            android:padding="5dp"
            android:text="." />

        <TextView
            android:id="@+id/div_bnt"
            style="@style/CalculatorButtons"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:gravity="center"
            android:onClick="@{numpad::OperatorClicked}"
            android:padding="5dp"
            android:text="/" />

        <!--Row-2-->
        <TextView
            android:id="@+id/num_7"
            style="@style/CalculatorButtons"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:gravity="center"
            android:onClick="@{numpad::NumberClicked}"
            android:padding="5dp"
            android:text="7" />

        <TextView
            android:id="@+id/num_8"
            style="@style/CalculatorButtons"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:gravity="center"
            android:onClick="@{numpad::NumberClicked}"
            android:padding="5dp"
            android:text="8" />

        <TextView
            android:id="@+id/num_9"
            style="@style/CalculatorButtons"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:gravity="center"
            android:onClick="@{numpad::NumberClicked}"
            android:padding="5dp"
            android:text="9" />

        <TextView
            android:id="@+id/multiply_btn"
            style="@style/CalculatorButtons"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:gravity="center"
            android:onClick="@{numpad::OperatorClicked}"
            android:padding="5dp"
            android:text="*" />

        <!--Row-3-->
        <TextView
            android:id="@+id/num_4"
            style="@style/CalculatorButtons"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:gravity="center"
            android:onClick="@{numpad::NumberClicked}"
            android:padding="5dp"
            android:text="4" />

        <TextView
            android:id="@+id/num_5"
            style="@style/CalculatorButtons"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:gravity="center"
            android:onClick="@{numpad::NumberClicked}"
            android:padding="5dp"
            android:text="5" />

        <TextView
            android:id="@+id/num_6"
            style="@style/CalculatorButtons"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:gravity="center"
            android:onClick="@{numpad::NumberClicked}"
            android:padding="5dp"
            android:text="6" />

        <TextView
            android:id="@+id/substract_btn"
            style="@style/CalculatorButtons"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:gravity="center"
            android:onClick="@{numpad::OperatorClicked}"
            android:padding="5dp"
            android:text="-" />

        <!--Row-4-->
        <TextView
            android:id="@+id/num_1"
            style="@style/CalculatorButtons"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:gravity="center"
            android:onClick="@{numpad::NumberClicked}"
            android:padding="5dp"
            android:text="1" />

        <TextView
            android:id="@+id/num_2"
            style="@style/CalculatorButtons"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:gravity="center"
            android:onClick="@{numpad::NumberClicked}"
            android:padding="5dp"
            android:text="2" />

        <TextView
            android:id="@+id/num_3"
            style="@style/CalculatorButtons"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:gravity="center"
            android:onClick="@{numpad::NumberClicked}"
            android:padding="5dp"
            android:text="3" />


        <TextView
            android:id="@+id/add_btn"
            style="@style/CalculatorButtons"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:gravity="center"
            android:onClick="@{numpad::OperatorClicked}"
            android:padding="5dp"
            android:text="+" />


        <!--Row-5-->

        <TextView
            android:id="@+id/open_bracket_btn"
            style="@style/CalculatorButtons"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:gravity="center"
            android:onClick="@{numpad::BracketOpened}"
            android:padding="5dp"
            android:text="(" />

        <TextView
            android:id="@+id/num_0"
            style="@style/CalculatorButtons"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:gravity="center"
            android:onClick="@{numpad::NumberClicked}"
            android:padding="5dp"
            android:text="0" />


        <TextView
            android:id="@+id/close_bracket_btn"
            style="@style/CalculatorButtons"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:gravity="center"
            android:onClick="@{numpad::BracketClosed}"
            android:padding="5dp"
            android:text=")" />

        <TextView
            android:id="@+id/result_btn"
            style="@style/ResultButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:gravity="center"
            android:onClick="@{numpad::ResultClicked}"
            android:padding="5dp"
            android:text="=" />


    </GridLayout>
</layout>